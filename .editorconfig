root = true

[*.{c,h,l,y,pl,pm}]
indent_style = tab
indent_size = tab
tab_width = 4
max_line_length = 78

[*.{sgml,xml}]
indent_style = space
indent_size = 1

[*.xsl]
indent_style = space
indent_size = 2

[*.cpp]
indent_style = tab
indent_size = 4
max_line_length = 78

[{GNUmakefile,Makefile}*]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.{dxl,mdp}]
indent_style = space
indent_size = 2
